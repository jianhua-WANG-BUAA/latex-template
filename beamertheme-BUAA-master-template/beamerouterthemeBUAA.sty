\mode<presentation>

% Normal slide header
\setbeamertemplate{frametitle}{
    \vskip1em\par
    \usebeamerfont{frametitle}\insertframetitle\par
    \usebeamerfont{framesubtitle}\insertframesubtitle\par
}

% Remove useless navigation symbols
\setbeamertemplate{navigation symbols}{}

% Set logo empty
\setbeamertemplate{logo}{}

% Remove header line that distract from actual slide content
\setbeamertemplate{headline}{%
    \leavevmode%
    \hbox{%
        \usebeamerfont{headline}%
        \begin{beamercolorbox}[
            wd=\textwidth,
            ht=6ex,
            dp=1.25ex
        ]{headline}%
            \hspace{0.3cm}%
			\usebeamerfont{section in head}
			\colorbox{main}{%
			\textcolor{background}{\thesection}%
			}
			\hspace{0.2em}%
            \insertsectionhead%
            \hfill%
            \includegraphics[height=2.2ex]
                {buaalogo.png}%
            \hspace{0.3cm}
        \end{beamercolorbox}%
    }
    \vskip0pt%
}

% Footer information line with title, author and slide number
\setbeamertemplate{footline}{%
    \leavevmode%
    \hbox{%
        \usebeamerfont{footline}%
        \begin{beamercolorbox}[
            wd=\textwidth,
            ht=2ex,
            dp=1.25ex
        ]{footline}%
			\color{main}
            \hspace{0.3cm}%
            \insertshortinstitute%
            \hfill%
			\insertshorttitle
			\hfill%
            \insertframenumber{}%
            \hspace{0.3cm}
        \end{beamercolorbox}%
    }
    \vskip0pt%
}

\mode<all>
